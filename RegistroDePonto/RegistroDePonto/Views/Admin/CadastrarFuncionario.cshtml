@model Funcionario

@{
    ViewData["Title"] = "Cadastrar Funcionário";
    Layout = "_Layout";
}

<style>
    body {
        background-color: #f4f6f8;
        color: #333;
    }

    .form-container {
        background-color: #ffffff;
        padding: 2rem;
        border-radius: 12px;
        max-width: 600px;
        margin: 2rem auto;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
    }

    .form-control {
        background-color: #f1f3f5;
        border: 1px solid #ced4da;
        color: #333;
        border-radius: 8px;
    }

        .form-control::placeholder {
            color: #888;
        }

        .form-control:focus {
            background-color: #fff;
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }

    h2, h4 {
        margin-bottom: 1.5rem;
        font-weight: 600;
    }

    label {
        margin-top: 1rem;
        font-weight: 500;
    }

    .btn-custom-blue {
        background-color: #ffffff;
        color: #0d6efd;
        border: 2px solid #0d6efd;
        padding: 0.6rem 1rem;
        border-radius: 8px;
        font-weight: 500;
        width: 100%;
        transition: background-color 0.2s ease, color 0.2s ease;
    }

        .btn-custom-blue:hover {
            background-color: #0d6efd;
            color: #ffffff;
        }

    .btn-outline-danger {
        width: 100%;
        font-weight: 500;
        border-radius: 8px;
        padding: 0.6rem 1rem;
    }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: #fff;
        }

    .btn-group {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 2rem;
    }

    @@media (min-width: 576px) {
        .btn-group

    {
        flex-direction: row;
    }

    .btn-group .btn {
        width: auto;
    }

    }

    .alert {
        background-color: #f8d7da;
        border: 1px solid #f5c2c7;
        color: #842029;
        border-radius: 8px;
        padding: 1rem;
        margin-top: 1.5rem;
    }
</style>

<div class="form-container">
    <h2>Cadastrar Novo Funcionário</h2>

    <form method="post" action="@Url.Action("CadastrarFuncionario", "Admin")">
        <label for="Matricula">Matrícula</label>
        <input type="number" class="form-control" id="Matricula" name="Matricula" required />

        <label for="NomeCompleto">Nome Completo</label>
        <input type="text" class="form-control" id="NomeCompleto" name="NomeCompleto" required />

        <label for="Senha">Senha</label>
        <input type="password" class="form-control" id="Senha" name="Senha" required />

        <label for="Perfil">Perfil</label>
        <select class="form-control" id="Perfil" name="Perfil" required>
            <option value="Admin">Admin</option>
            <option value="Funcionario">Funcionario</option>
        </select>

        <h4>Jornada de Trabalho</h4>

        <label for="EntradaManha">Entrada Manhã</label>
        <input type="time" class="form-control" id="EntradaManha" name="EntradaManha" required />

        <label for="SaidaManha">Saída Manhã</label>
        <input type="time" class="form-control" id="SaidaManha" name="SaidaManha" required />

        <label for="EntradaTarde">Entrada Tarde</label>
        <input type="time" class="form-control" id="EntradaTarde" name="EntradaTarde" required />

        <label for="SaidaTarde">Saída Tarde</label>
        <input type="time" class="form-control" id="SaidaTarde" name="SaidaTarde" required />

        <div class="btn-group">
            <button type="submit" class="btn btn-custom-blue">Cadastrar Funcionário</button>
            <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-danger">Cancelar</a>
        </div>
    </form>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul class="mb-0">
                @foreach (var erro in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@erro.ErrorMessage</li>
                }
            </ul>
        </div>
    }
</div>
